    <!-- instantaneous speed -->
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/speed"
            android:id="@+id/labelSpeed"
            android:layout_column="0"
            android:textColor="@color/white"
            android:layout_gravity="right" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/sample_speed"
            android:layout_column="1"
            android:id="@+id/panel1SpeedInstant"
            android:layout_gravity="left"
            android:textColor="@color/white"
            />
    </TableRow>

    <!-- average speed -->
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/average_speed"
            android:id="@+id/labelAvgSpeed"
            android:layout_column="0"
            android:textColor="@color/white"
            android:layout_gravity="right" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/sample_average_speed"
            android:layout_column="1"
            android:id="@+id/panel1SpeedAverage"
            android:layout_gravity="left"
            android:textColor="@color/white"
            />
    </TableRow>

    <!-- distance -->
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/distance_short"
            android:id="@+id/labelDistance"
            android:layout_column="0"
            android:textColor="@color/white"
            android:layout_gravity="right" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/sample_distance"
            android:id="@+id/panel1Distance"
            android:layout_column="1"
            android:textColor="@color/white"
            android:layout_gravity="left" />
    </TableRow>


</TableLayout>
</android.support.wearable.view.BoxInsetLayout>