<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal"
    android:weightSum="1">

    <Button android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:background="@drawable/materialdesignicons_dots_horizontal"
        android:layout_weight=".2"
        android:layout_gravity="center_vertical|left"
        />
    <android.support.wearable.view.CircularButton
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:src="@drawable/materialdesignicons_clock_end_red"
        android:layout_weight="0"
        android:layout_gravity="center_vertical|left"
        />
    <Button android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:background="@drawable/materialdesignicons_dots_horizontal"
        android:layout_weight=".2"
        android:layout_gravity="center_vertical|left"
        />
    <android.support.wearable.view.CircularButton android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:src="@drawable/materialdesignicons_clock_end_red"
        android:layout_weight="0"
        android:textColor="#ffffff"
        android:layout_gravity="center"
        />

    <Button
        android:id="@+id/button5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/materialdesignicons_dots_horizontal"
        android:layout_weight=".2"
        android:text=""
        android:layout_gravity="center_vertical|right"
        />

</LinearLayout>